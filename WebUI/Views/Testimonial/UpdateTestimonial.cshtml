@model UpdateTestimonialDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yorum Girişi</div>
                        </div>
                        <input type="hidden" asp-for="TestimonialID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Yorum Yapan Kişinin Ad - Soyad Bilgisi</label>
                                <input type="text" class="form-control" asp-for="Name" id="name">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="title">Yorum Yapan Kişinin Ünvan Bilgisi</label>
                                <input type="text" class="form-control" asp-for="Title" id="title">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">Yorum Yapan Kişinin Resim Dosya Yolu</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="comment">Yorum Giriniz</label>
                                <input type="text" class="form-control" asp-for="Comment" id="comment">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Yorumu Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

