@model CreateMessageDto
<section class="book_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>
                Bizimle iletişim kurun
            </h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form_container">
                    <form method="post" asp-action="SendMessage" asp-controller="Default">
                        <div>
                            <input type="text" class="form-control" placeholder="Adınız Ve Soyadınız" asp-for="NameSurname" />
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="Telefon Numaranız"  asp-for="PhoneNumber"/>
                        </div>
                        <div>
                            <input type="email" class="form-control" placeholder="Email Adresiniz" asp-for="Mail"/>
                        </div>
                        <div>
                            <input type="text" class="form-control" placeholder="İleti Konusu" asp-for="Subject" />
                        </div>
                        <div>
                            <textarea asp-for="Content" rows="10" placeholder="Buraya iletinizi belirtebilirsiniz." class="form-control"></textarea>
                        </div>
                        <div class="btn_box">
                            <button>
                                Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="map_container ">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3009.1825472640357!2d29.00354701243814!3d41.043136921226186!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab79881575a9d%3A0xc619367187f283ba!2zQmXFn2lrdGHFnyDDh2FyxZ_EsQ!5e0!3m2!1str!2str!4v1755036655456!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>