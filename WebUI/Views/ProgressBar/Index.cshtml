
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<script type="text/javascript">
	$(document).ready(() => {

		const connection = new signalR.HubConnectionBuilder()
			.withUrl("https://localhost:7239/WebHub")
			.build();

		connection.start().then(() => {
			$("#connstatus").text(connection.state);
			setInterval(() =>{
							   connection.invoke("SendProgress");
			},1000);
		}).catch((err) => {
			console.error(err);
		});

		connection.on("ReceiveTotalMoneyCaseAmount", (value) => {
			$("#totalmoneycaseamount").text(value);
		});
		connection.on("ReceiveCountDailyEarnings", (value) => {
			$("#countdailyearnings").text(value);
		});
		connection.on("ReceiveActiveOrderCount", (value) => {
			$("#activeordercount").text(value);
		});
		connection.on("ReceiveNumberOfEmptyTables", (value) => {
			$("#numberofemptytables").empty();
			$("#numberofemptytables").append(`
				<div class="d-flex justify-content-between mb-1">
					<span class="text-muted">Kapalı Masa Sayısı</span>
					<span class="text-muted fw-bold"> ${value}</span>
				</div>
				<div class="progress mb-2" style="height: 7px;">
				<div class="progress-bar bg-danger" role="progressbar" style="width: ${value}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value}%"></div>
				</div>
			`);
		});
		connection.on("ReceiveMenuTableCount", (value) => {
			$("#totalMenuTableCountProgress").empty();
			$("#totalMenuTableCountProgress").append(`
				<div class="d-flex justify-content-between mb-1">
					<span class="text-muted">Toplam Masa Sayısı</span>
					<span class="text-muted fw-bold"> ${value}</span>
				</div>
				<div class="progress mb-2" style="height: 7px;">
				<div class="progress-bar bg-success" role="progressbar" style="width: ${value}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value}%"></div>
				</div>
			`);
		});
		connection.on("ReceiveActiveMenuTableCount", (value) => {
			$("#activeMenuTableCount").empty();
			$("#totalMenuTableCountProgress").append(`
				<div class="d-flex justify-content-between mb-1">
					<span class="text-muted">Aktif Masa Sayısı</span>
					<span class="text-muted fw-bold"> ${value}</span>
				</div>
				<div class="progress mb-2" style="height: 7px;">
				<div class="progress-bar bg-success" role="progressbar" style="width: ${value}%" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100" data-toggle="tooltip" data-placement="top" title="${value}%"></div>
				</div>
			`);
		});

	});
</script>

@*  *@

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Restoran Durumları</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="row row-card-no-pd">
					<div class="col-md-4">
						<div class="card">
							<div class="card-body">
								<p class="fw-bold mt-1">Kasa Tutarı</p>
								<h4 id="totalmoneycaseamount"></h4>
							</div>
							<div class="card-body">
								<p class="fw-bold mt-1">Günlük Toplam Kazanç</p>
								<h4 id="countdailyearnings"></h4>
							</div>
						</div>
					</div>
					<div class="col-md-5">
						<div class="card">
							<div class="card-body">
								<div class="progress-card" id="totalMenuTableCountProgress"></div>
								<div class="progress-card" id="activeMenuTableCount"></div>
								<div class="progress-card" id="numberofemptytables"></div>
							</div>
						</div>
					</div>
					<div class="col-md-3">
						<div class="card card-stats">
							<div class="card-body">
								<br />
								<br />
								<div class="row">
									<div class="col-5">
										<div class="icon-big text-center">
											<h2>✅</h2>
										</div>
									</div>
									<div class="col-7 d-flex align-items-center">
										<div class="numbers">
											<p class="card-category text-center">Aktif Hesap Sayısı</p>
											<h4 class="card-title text-center" id="activeordercount"></h4>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>

