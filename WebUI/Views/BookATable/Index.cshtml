@model CreateBookingDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")


    <!-- book section -->
    <section class="book_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>
					Hızlıca Rezervasyon Yapın
                </h2>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <form method="post">
                            <div>
                                <input type="text" class="form-control" placeholder="İsminiz" asp-for="Name"/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="text" class="form-control" placeholder="Telefon Numaranız" asp-for="Phone" />
                                <span asp-validation-for="Phone" class="text-danger"></span>

                            </div>
                            <div>
                                <input type="email" class="form-control" placeholder="Email Adresiniz" asp-for="Mail"/>
                                <span asp-validation-for="Mail" class="text-danger"></span>

                            </div>
                            <div>
                                <select class="form-control nice-select wide" asp-for="PersonCount">
                                    <option value="" disabled selected>
                                        Kaç kişi olucaksınız
                                    </option>
                                    <option value="1">
                                        1
                                    </option>
                                    <option value="2">
                                        2
                                    </option>
                                    <option value="3">
                                        3
                                    </option>
                                    <option value="4">
                                        4
                                    </option>
                                    <option value="5">
                                        5
                                    </option>
                                </select>
								<span asp-validation-for="PersonCount" class="text-danger"></span>
                            </div>
                            <div>
                                <input type="date" class="form-control" asp-for="Date">
								<span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="btn_box">
                                <button>
                                    Rezervasyonu Oluştur
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="map_container ">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3009.1825472640357!2d29.00354701243814!3d41.043136921226186!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab79881575a9d%3A0xc619367187f283ba!2zQmXFn2lrdGHFnyDDh2FyxZ_EsQ!5e0!3m2!1str!2str!4v1755036655456!5m2!1str!2str" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end book section -->
    <!-- footer section -->
    @await Component.InvokeAsync("_UILayoutFooterComponentPartial")
    @await Component.InvokeAsync("_UILoyutScriptComponentPartial")

</body>

</html>
