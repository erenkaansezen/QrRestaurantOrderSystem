@model UserEditDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hesap İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Kategori Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Adınız</label>
                                <input type="text" class="form-control" asp-for="Name" id="Name">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Surname">Soyadınız</label>
                                <input type="text" class="form-control" asp-for="Surname" id="Surname">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="UserName">Kullanıcı Adınız</label>
                                <input type="text" class="form-control" asp-for="UserName" id="UserName">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Email">Kullanıcı Adınız</label>
                                <input type="text" class="form-control" asp-for="Mail" id="Email">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Password">Yeni Şifre Belirleyin</label>
                                <input type="text" class="form-control" asp-for="Password" id="Password">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="ConfirmPassword">Yeni Şifrenizi Onaylayın</label>
                                <input type="text" class="form-control" asp-for="ConfirmPassword" id="ConfirmPassword">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Kategoriyi Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

