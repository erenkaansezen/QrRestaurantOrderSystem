@model UpdateContactDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İletişim Bilgisi Güncelle</div>
                        </div>
                        <input type="hidden" asp-for="ContactID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Location">Lokasyon Giriniz</label>
                                <input type="text" class="form-control" asp-for="Location" id="Location">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="phone">Telefon Numarası Giriniz</label>
                                <input type="text" class="form-control" asp-for="Phone" id="phone">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Mail">Email Giriniz</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="footertitle">Başlık Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="FooterTitle" id="footertitle"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Açıklama Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="description"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="opendays">Açık Günleri Giriniz</label>
                                <textarea rows="5" class="form-control" asp-for="OpenDays" id="opendays"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="opendaysdescription">Açık Günlerin Açıklamasını</label>
                                <textarea rows="5" class="form-control" asp-for="OpenDaysDescription" id="opendaysdescription"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="openhours">Açık Günlerin Saatlerini</label>
                                <textarea rows="5" class="form-control" asp-for="OpenHours" id="openhours"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İletişim Bilgisini Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

